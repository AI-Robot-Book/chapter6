<robot name="simple_arm">

  <link name="base_link"/>

  <joint name="joint0" type="fixed">
    <parent link="base_link"/>
    <child  link="link0"/>
  </joint>

  <link name="link0">
    <visual>
      <geometry>
        <cylinder length="0.25" radius="0.2"/>
      </geometry>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <material name="color0">
        <color rgba="1.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="link0"/>
    <child  link="link1"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="0" velocity="0"/>
  </joint>

  <link name="link1">
    <visual>
      <geometry>
        <box size="1.2 0.2 0.1"/>
      </geometry>
      <origin xyz="0.5 0 0.05" rpy="0 0 0"/>
      <material name="color1">
        <color rgba="0.67 0.33 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child  link="link2"/>
    <origin xyz="1 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="0" velocity="0"/>
  </joint>

  <link name="link2">
    <visual>
      <geometry>
        <box size="1.1 0.2 0.1"/>
      </geometry>
      <origin xyz="0.45 0 0.05" rpy="0 0 0"/>
      <material name="color2">
        <color rgba="0.33 0.67 1.0 1.0"/>
      </material>
    </visual>
  </link>
</robot>
